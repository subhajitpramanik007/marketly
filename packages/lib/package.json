{
  "name": "@marketly/lib",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "@marketly/config": "workspace:*",
    "ejs": "^3.1.10",
    "ioredis": "^5.6.1",
    "nodemailer": "^7.0.3",
    "zod": "^3.25.57"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/node": "^24.0.0",
    "@types/nodemailer": "^6.4.17",
    "typescript": "^5.8.3"
  },
  "exports": {
    "./schemas": {
